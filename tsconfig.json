{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules"]
}
